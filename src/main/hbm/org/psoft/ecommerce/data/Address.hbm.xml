<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="address" name="org.psoft.ecommerce.data.Address">
    <id name="id" column="id">
      <generator class="native"/>
    </id>
    <property name="name" not-null="true"/>
    <property name="address1" not-null="true"/>
    <property name="address2"/>
    <property name="city" not-null="true"/>
    <property name="postalCode" not-null="true"/>
    <property name="state" not-null="true"/>
    <property name="phone"/>
    <property name="altPhone"/>
    <property name="company"/>
  </class>
</hibernate-mapping>
