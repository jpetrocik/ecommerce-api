<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="document" name="org.psoft.ecommerce.data.Document">
    <id name="id" column="id">
      <generator class="native"/>
    </id>
    <property name="descr"/>
    <property name="title"/>
    <property name="type"/>
    <property name="createdOn"/>
    <property name="data" access="field" not-null="true" type="binary"/>
    <property name="previewImage" access="field" not-null="true" type="binary"/>
    <property name="contentType"/>
    <property name="filename"/>
  </class>
</hibernate-mapping>
